##### Keybinds 
    # Управление вкладками
    keybind = ctrl+t=new_tab
    keybind = ctrl+w=close_surface
    keybind = ctrl+tab=next_tab
    keybind = ctrl+shift+tab=previous_tab
    keybind = ctrl+p=move_tab:1
    keybind = ctrl+o=move_tab:-1
    keybind = ctrl+1=goto_tab:1
    keybind = ctrl+2=goto_tab:2
    keybind = ctrl+3=goto_tab:3
    keybind = ctrl+4=goto_tab:4
    keybind = ctrl+5=goto_tab:5
    keybind = ctrl+6=goto_tab:6
    keybind = ctrl+7=goto_tab:7
    keybind = ctrl+8=goto_tab:8
    keybind = ctrl+9=goto_tab:9
    keybind = ctrl+0=last_tab
    
    # Вспомогательные
    keybind = ctrl+h=toggle_command_palette
    keybind = ctrl+r=reload_config
    keybind = ctrl+n=clear_screen
    keybind = ctrl+equal=increase_font_size:1.0
    keybind = ctrl+minus=decrease_font_size:1.0
    keybind = ctrl+enter=toggle_split_zoom
    
    # Управление разделением экрана
    keybind = ctrl+backslash=new_split
    keybind = ctrl+up=goto_split:up
    keybind = ctrl+down=goto_split:down
    keybind = ctrl+left=goto_split:left
    keybind = ctrl+right=goto_split:right
    
    

##### Стилизация
    mouse-hide-while-typing = true
    window-padding-color = extend
    window-decoration = true
    background-opacity = 0.75
    cursor-style-blink = true
    cursor-style = bar
    shell-integration = zsh
    background-blur = false
    theme = Cursor Dark
    # Afterglow, Arthur, Cursor Dark, Monokai Pro Spectrum, Kanagawa Dragon
